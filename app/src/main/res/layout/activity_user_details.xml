<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.userdetails.UserDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back_new_monitoring"
        android:layout_width="42dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tvUserNameToolbarMonitoring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_back_new_monitoring"
        app:layout_constraintTop_toTopOf="@+id/btn_back_new_monitoring" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="132dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/img"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/label_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_edad"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/user_avatar"
        app:layout_constraintTop_toTopOf="@+id/user_avatar" />

    <TextView
        android:id="@+id/label_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_peso"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_altura"
        app:layout_constraintTop_toBottomOf="@+id/label_altura" />

    <TextView
        android:id="@+id/label_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_genero"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_peso"
        app:layout_constraintTop_toBottomOf="@+id/label_peso" />

    <TextView
        android:id="@+id/label_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_altura"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_edad"
        app:layout_constraintTop_toBottomOf="@+id/label_edad" />

    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_email"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/user_avatar" />

    <TextView
        android:id="@+id/label_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_phone"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_email"
        app:layout_constraintTop_toBottomOf="@+id/label_email" />

    <TextView
        android:id="@+id/label_phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_phone2"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_phone"
        app:layout_constraintTop_toBottomOf="@+id/label_phone" />

    <TextView
        android:id="@+id/label_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_address"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_phone2"
        app:layout_constraintTop_toBottomOf="@+id/label_phone2" />

    <TextView
        android:id="@+id/label_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_city"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_address"
        app:layout_constraintTop_toBottomOf="@+id/label_address" />

    <TextView
        android:id="@+id/label_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_cp"
        android:textColor="@color/blue_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_city"
        app:layout_constraintTop_toBottomOf="@+id/label_city" />

    <Button
        android:id="@+id/btn_edit_data"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="@string/btn_edit_data"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:icon="@drawable/edit_user_data_2"
        app:layout_constraintStart_toStartOf="@+id/label_cp"
        app:layout_constraintTop_toBottomOf="@+id/label_cp" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_edad"
        app:layout_constraintStart_toEndOf="@+id/label_edad"
        app:layout_constraintTop_toTopOf="@+id/label_edad" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_altura"
        app:layout_constraintStart_toEndOf="@+id/label_altura"
        app:layout_constraintTop_toTopOf="@+id/label_altura" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_peso"
        app:layout_constraintStart_toEndOf="@+id/label_peso"
        app:layout_constraintTop_toTopOf="@+id/label_peso" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_genero"
        app:layout_constraintStart_toEndOf="@+id/label_genero"
        app:layout_constraintTop_toTopOf="@+id/label_genero" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_email"
        app:layout_constraintStart_toEndOf="@+id/label_email"
        app:layout_constraintTop_toTopOf="@+id/label_email" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_phone"
        app:layout_constraintStart_toEndOf="@+id/label_phone"
        app:layout_constraintTop_toTopOf="@+id/label_phone" />

    <TextView
        android:id="@+id/tvPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_phone2"
        app:layout_constraintStart_toEndOf="@+id/label_phone2"
        app:layout_constraintTop_toTopOf="@+id/label_phone2" />

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_address"
        app:layout_constraintStart_toEndOf="@+id/label_address"
        app:layout_constraintTop_toTopOf="@+id/label_address" />

    <TextView
        android:id="@+id/tvcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_city"
        app:layout_constraintStart_toEndOf="@+id/label_city"
        app:layout_constraintTop_toTopOf="@+id/label_city" />

    <TextView
        android:id="@+id/tvcp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_cp"
        app:layout_constraintStart_toEndOf="@+id/label_cp"
        app:layout_constraintTop_toTopOf="@+id/label_cp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLastMonitoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/blue_primary"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingLeft="5dp"
        app:contentPaddingRight="5dp"
        app:contentPaddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_data">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/label_last_monitoring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/label_last_monitoring"
                android:textAlignment="textStart"
                android:textColor="@color/blue_secondary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/last_session_e4"
                android:layout_width="54dp"
                android:layout_height="63dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/label_last_monitoring"
                app:layout_constraintTop_toBottomOf="@+id/label_last_monitoring"
                app:srcCompat="@mipmap/e4band" />

            <ImageView
                android:id="@+id/last_session_tic"
                android:layout_width="54dp"
                android:layout_height="63dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/last_session_e4"
                app:layout_constraintStart_toEndOf="@+id/last_session_e4"
                app:layout_constraintTop_toTopOf="@+id/last_session_e4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@mipmap/watch2" />

            <ImageView
                android:id="@+id/last_session_board"
                android:layout_width="54dp"
                android:layout_height="63dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/last_session_tic"
                app:layout_constraintStart_toEndOf="@+id/last_session_tic"
                app:srcCompat="@mipmap/ehealthboard_logo" />

            <Button
                android:id="@+id/btn_new_monitoring"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="@string/btn_new_monitoring"
                android:textSize="12sp"
                app:icon="@drawable/ic_add_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/label_last_monitoring"
                app:layout_constraintTop_toBottomOf="@+id/last_session_board" />

            <TextView
                android:id="@+id/label_last_session_timini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Inicio:"
                android:textColor="@color/blue_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/last_session_board"
                app:layout_constraintTop_toTopOf="@+id/label_last_monitoring" />

            <TextView
                android:id="@+id/label_last_session_timfin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Fin:"
                android:textColor="@color/blue_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvTimesTampIniUsersDetails"
                app:layout_constraintTop_toBottomOf="@+id/tvTimesTampIniUsersDetails" />

            <TextView
                android:id="@+id/label_last_session_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="DuraciÃ³n:"
                android:textColor="@color/blue_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvTimesTampFinUsersDetails"
                app:layout_constraintTop_toBottomOf="@+id/tvTimesTampFinUsersDetails" />

            <TextView
                android:id="@+id/tvTimesTampIniUsersDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_top_mini_bar"
                app:layout_constraintStart_toStartOf="@+id/label_last_session_timini"
                app:layout_constraintTop_toBottomOf="@+id/label_last_session_timini" />

            <TextView
                android:id="@+id/tvTimesTampFinUsersDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_top_mini_bar"
                app:layout_constraintStart_toStartOf="@+id/label_last_session_timfin"
                app:layout_constraintTop_toBottomOf="@+id/label_last_session_timfin" />

            <TextView
                android:id="@+id/tvTotalTimeUsersDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/e4connected"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/label_last_session_total"
                app:layout_constraintTop_toBottomOf="@+id/label_last_session_total" />

            <TextView
                android:id="@+id/tv_no_session_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/label_no_sessions_for_user"
                android:textColor="@color/blue_secondary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>